@model SimpleBlog.Areas.admin.ViewModels.UserResetPassword
           

<h1>Reset Password For @Model.Username</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    
    <div class="form-group">
        @Html.LabelFor(f=> f.Password)
        @Html.PasswordFor(f => f.Password, new { @class = "form-control" })

    </div>
    <input type="submit" value="Reset Password" class="btn btn-primary" />
    <a href="@Url.Action("Index")"> or cancel</a>
}