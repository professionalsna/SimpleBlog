
@helper SelectedTabClass(string tabName)
{
    if (tabName==ViewBag.SelectedTab)
    {
  @:active
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Sample Blog - Admin</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/admin/styles");
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        
        <div class="container">
            <ul class="nav nav-pills">
                <li class="@SelectedTabClass("posts")" >@Html.ActionLink("Posts","Index","Posts", new {area="admin"}, new{})</li>
                <li class="@SelectedTabClass("users")"> @Html.ActionLink("Users", "Index", "User", new { area = "admin" }, new { })</li>
                
                <li class="@SelectedTabClass("roles")"> @Html.ActionLink("Roles", "Index", "Roles", new { area = "admin" }, new { })</li>
                <li class="pull-right">@Html.RouteLink("Back to Website","home")</li>
                
            </ul> 
        
        @RenderBody()
        </div>
        
    
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/admin/scripts")
        @RenderSection("scripts", required: false)
        
        
        <form class="hidden" id="anti-forgery-form">
            @Html.AntiForgeryToken()
        </form>
    </body>
</html>
