@model SimpleBlog.Areas.admin.ViewModels.RoleIndex

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<div class="btn-toolbar">
   
    <a class="btn btn-sm btn-primary"  href="@Url.Action("new")"> <i class="glyphicon glyphicon-plus-sign"></i> Add New Role </a>
</div>


<table class="table table-striped" >
    <thead>
        <tr>
            <th>RoleId</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var roles in Model.Roles)
        {
            <tr>
                <td>@roles.Id</td>
                <td>@roles.Name</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("edit",new{roles.Id})" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i>Edit</a>
                        <a href="@Url.Action("ViewRolesUsers",new {roles.Id})" class="btn btn-xs btn-default"><i class="glyphicon glyphicon-user"></i>Users in Role</a>
                        
                         
                        <a href="#" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-remove"></i>Delete</a>
                    </div>
                </td>

            </tr>
            
        }
        

    </tbody>
</table>

